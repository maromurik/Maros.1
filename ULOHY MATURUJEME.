#2
fr = open("hada.txt", "r")
fw = open("vysledok.txt","w")
counter = 1
riadky = 0
dlzka_riadka = 0
kratky = 1154080590590590596164605604505
for riadok in fr:
   riadky+=1
   if len(riadok) > dlzka_riadka:
    dlzka_riadka = len(riadok.strip())
   if len(riadok) < kratky:
     kratky = len(riadok.strip())
   for i in range(1,len(riadok)):       #i je int
      if riadok[i] == riadok[i-1]:
        counter+=1
      else:
        fw.write(riadok[i-1]+str(counter)+ " ")
        counter = 1
fw.write("\n")
print(f"najdlhsia hra bola {dlzka_riadka}")
print(f"najkratsia hra bola {kratky}")
fw.close()
#4
fr = open("meteo_stanice.txt","r")
merania = 0
teploty =[]
kod_najvacsieho = ""
najviac = -10000
for riadok in fr:
    merania +=1
    for i in range(0,len(riadok)):
        if riadok[i] == "+" or riadok[i] == "-" :
            if riadok[i+1] != "0":
                teplota= (float(riadok[i]+riadok[i+1]+riadok[i+2]+"."+riadok[i+4]))
            else:
                teplota =(float(riadok[i]+riadok[i+2]+"."+riadok[i+4]))

            teploty.append(teplota)
            if najviac < teplota:
                najviac = teplota
                kod_najvacsieho = riadok[0:3]



print(merania)
print(teploty)
print(max(teploty))
print(kod_najvacsieho)
print(sum(teploty)/merania)


#7. ULOHA
import random
def miesaj(co,typ_miesania = True):
    velkost = len(co)
    if typ_miesania:
        for pocet in range(velkost**2):
            i = random.randrange(0,velkost)
            j = random.randrange(0,velkost)
            pom = co[j]
            co[j] = co[i]
            co[i] = pom
            # co[i],co[j] = co[j], co[i] #SPECIALITKA PYTHONU

    else:
        parne_otazky = [i for i in range(2,velkost,2)]
        random.shuffle(parne_otazky)
        neparne_otazky = [i for i in range(1, velkost, 2)]
        random.shuffle(neparne_otazky)
        for i in range(0,velkost//2-1,):
            co[i*2] = parne_otazky[i]
            co[i*2+1] = neparne_otazky[i]



student = [i for i in range(1,int(input("zadaj studentov: "))+1)]
otazka = [i for i in range(1,int(input("zadaj otazky: "))+1)]
if len(student) > len(otazka):
    print("NEFUNGUJE")
else:
    miesaj(student)
    miesaj(otazka,False)
    for cislo in range(len(student)):
        print(f"Student cislo: {student[cislo]} - Otazka cislo: {otazka[cislo]}")
#11
fr = open("sutaz_vbehu.txt","r")
sutaziaci = 0
najlepsi = 10000
meno_naj = ""
for riadok in fr:
    sutaziaci+=1
    meno, cas = riadok.strip().split()
    cas = int(cas)
    print(f"Súťažiaci {meno} prišiel do cieľa za {cas} sekúnd")
    if cas < najlepsi:
        najlepsi = cas
        meno_naj = meno
print(f"Najlepší: {meno_naj} {najlepsi//60}min. {najlepsi%60}sek. ")

#12
fr = open("bus_vytazenost.txt","r",encoding = "cp1250")
kapacita = int(fr.readline())
zastavky = 0
aktualny_pocet_ludi = 0
najvac = 1
preplnene = []
for riadok in fr:
    zastavky+=1
    data = riadok.strip().split()
    nazov = " ".join(data[2:])
    nastup = int(data[0])
    vystup = int(data[1])
    aktualny_pocet_ludi = aktualny_pocet_ludi+nastup-vystup
    if aktualny_pocet_ludi > najvac:
        najvac = aktualny_pocet_ludi
    print(nazov,end=",")
    if aktualny_pocet_ludi > kapacita:
        preplnene.append(nazov)
print(preplnene)
print(najvac)


#17
tabulka = {
    " ": "0",
    "A": "1", "B": "11", "C": "111",
    "D": "2", "E": "22", "F": "222",
    "G": "3", "H": "33", "I": "333",
    "J": "4", "K": "44", "L": "444",
    "M": "5", "N": "55", "O": "555",
    "P": "6", "Q": "66", "R": "666",
    "S": "7", "T": "77", "U": "777",
    "V": "8", "W": "88", "X": "888",
    "Y": "9", "Z": "99"
}

veta = input("Zadaj vetu: ")

sifra = []
pocet = {}


for znak in veta:
    kod = tabulka[znak]
    sifra.append(kod)
    cislo = kod[0]
    pocet[cislo] = pocet.get(cislo, 0) + 1


print("Zašifrovaná veta:")
print(" ".join(sifra))

max_vyskyt = max(pocet.values())
najcastejsie = []
for k, v in pocet.items():
    if v == max_vyskyt:
        najcastejsie.append(k)

print("Najčastejšie zvolené políčka:", " ".join(najcastejsie))




#20
fr = open("tabulka_pocetnosti.txt", "r", encoding="utf-8")
text = fr.read()


print("Obsah súboru:")
print(text)
print("\n")


from string import ascii_uppercase

pocet = {pismeno: 0 for pismeno in ascii_uppercase}

for znak in text.upper():
    if znak in pocet:
        pocet[znak] += 1

print("Počty jednotlivých znakov v texte:")
for pismeno, vyskyt in pocet.items():
    print(f"{pismeno} - {vyskyt}")


#21
import random

with open("poprehadzovany_text1_vstup.txt", "r", encoding="cp1250") as fr:
    nove_riadky = []
    for riadok in fr:
        slova = riadok.strip().split()
        nove_slova = []
        for slovo in slova:
            if len(slovo) > 3:
                stred = list(slovo[1:-1])
                random.shuffle(stred)
                nove = slovo[0] + "".join(stred) + slovo[-1]
            else:
                nove = slovo
            nove_slova.append(nove)
        nove_riadky.append(" ".join(nove_slova))

with open("hotovo.txt", "w", encoding="cp1250") as fw:
    fw.write("\n".join(nove_riadky))

#42
import random
import tkinter as tk

width = 600
pos_y = 10
win = tk.Tk()
canvas = tk.Canvas(win,width=width,height=1000,bg = "hotpink")
canvas.pack()
pismenka = "abcdefghijklmnopqrstuvwxyz"
sprite = canvas.create_oval(10,10,30,30)
vybrane = random.choice(pismenka)
skryte = canvas.create_text(20,20,text=vybrane,fill="hotpink")


def animation():
    if canvas.itemcget(skryte,"fill") == "hotpink":
        canvas.move(sprite,0,1)
        canvas.move(skryte,0,1)
        canvas.after(10,animation)



def yes(event):
    global skryte
    if event.char in vybrane:
        pozicia = vybrane.find(event.char)
        canvas.itemconfig(skryte,fill="black")


win.bind("<Key>",yes)



animation()
win.mainloop()


#43
import tkinter as tk
import random
farby = ["green","blue","red","grey","yellow"]
cas = 60
import tkinter as tk
root = tk.Tk()
canvas = tk.Canvas(root,width=800,height=600,bg="white")
canvas.pack()
spravny = random.randrange(1,6)
print(spravny)
for i,farba in enumerate(farby):
    canvas.create_rectangle(100,100+(i)*10,500,100+(i+1)*10,fill=farba)

def click(event):
    objekt = canvas.find_overlapping(event.x,event.y,event.x+1,event.y+1)
    if spravny in objekt:
        canvas.create_text(500,500,text="VYHRAL SI")
timer = canvas.create_text(50,50,text = cas)
def pocitadlo():
    global cas
    canvas.itemconfig(timer,text=cas)
    cas-=1
    if cas >=0:
        canvas.after(1000,pocitadlo)
    else:
        canvas.create_text(500, 500, text="PREHRAL SI")

canvas.bind("<Button-1>",click)
pocitadlo()
root.mainloop()


#44
import random
import tkinter as tk

width = 600
pos_y = 10
win = tk.Tk()
canvas = tk.Canvas(win,width=width,height=1000,bg = "hotpink")
canvas.pack()
slova= ["tkinter","python","rozok","jozo","miso",]
vybrane = random.choice(slova)
pocet_hviezd = len(vybrane)
hadane_slovo = "*"*pocet_hviezd
sprite = canvas.create_text(random.randrange(0,width),pos_y,text=hadane_slovo)


def animation():
    canvas.move(sprite,0,1)
    if canvas.coords(sprite)[1] > 950 :
        canvas.create_text(500,500,text= "PREHRAL SI")
    else:
        canvas.after(10,animation,)
        if "*" not in hadane_slovo:
            canvas.after(10,win.destroy)
            print("VYHRAL SI")


def yes(event):
    global hadane_slovo
    if event.char in vybrane:
        pozicia = vybrane.find(event.char)
        hadane_slovo = hadane_slovo[:pozicia:]+event.char+hadane_slovo[pozicia+1:]
        canvas.itemconfig(sprite,text=hadane_slovo)


win.bind("<Key>",yes)




animation()
win.mainloop()








